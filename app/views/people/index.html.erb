<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Whatsapp</th>
      <th>Works</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.address %></td>
        <td><%= person.phone %></td>
        <td><%= person.email %></td>
        <td><%= person.whatsapp %></td>
        <td><%= person.works %></td>
        <td><%= person.country %></td>
        <td><%= person.state %></td>
        <td><%= person.city %></td>
        <td><%= person.comments %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

